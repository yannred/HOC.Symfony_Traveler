        <h1>Utilisateur : {{ user.login }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Login</th>
                    <td>{{ user.login }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ include('admin/user/roles_pills.html.twig', { roles: user.roles }) }}</td>
                </tr>
                <tr>
                    <th>Created</th>
                    <td>{{ user.created ? user.created|date('d/m/Y') : '' }}</td>
                </tr>
            </tbody>
        </table>
    
        <a href="{{ path('admin_user_index') }}" class="btn btn-primary mr-3">Retour Ã  la liste</a>
    
        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning">Editer</a>
    
        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
